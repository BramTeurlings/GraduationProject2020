<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nl.brickx.brickxwms2020">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Presentation.MainMenu.MainMenuActivity"
            android:parentActivityName=".Presentation.Login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.Login.LoginActivity"/>
        </activity>
        <activity
            android:name=".Presentation.ProductInfo.ProductInfoActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.ProductInfo.ProductInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.MainMenu.MainMenuActivity"/>
        </activity>
        <activity
            android:name=".Presentation.OrderPick.OrderPickActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.OrderPick.OrderPickActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.OrderPickLanding.OrderPickLandingActivity"/>
        </activity>
        <activity
            android:name=".Presentation.StockTransfer.StockTransferActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.StockTransfer.StockTransferActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.MainMenu.MainMenuActivity"/>
        </activity>
        <activity
            android:name=".Presentation.StockMutation.StockMutationActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.StockMutation.StockMutationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.MainMenu.MainMenuActivity"/>
        </activity>
        <activity
            android:name=".Presentation.StockMutationMain.StockMutationMainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.StockMutationMain.StockMutationMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.StockMutation.StockMutationActivity"/>
        </activity>
        <activity
            android:name=".Presentation.StockTransferMain.StockTransferMainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.StockTransferMain.StockTransferMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.StockTransfer.StockTransferActivity"/>
        </activity>
        <activity
            android:name=".Presentation.OrderPickLanding.OrderPickLandingActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.OrderPickLanding.OrderPickLandingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.MainMenu.MainMenuActivity"/>
        </activity>
        <activity
            android:name=".Presentation.LocationInfo.LocationInfoActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:parentActivityName=".Presentation.LocationInfo.LocationInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Presentation.MainMenu.MainMenuActivity"/>
        </activity>
        <activity android:name=".Presentation.Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>